{% block title %}{% if not edit %}Create new genre {% else %} Edit genre {% endif %}{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <h3 class="h3 mb-3 font-weight-normal">{% if not edit %}Create new genre {% else %} Edit genre {% endif %}</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.name) }}
            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
