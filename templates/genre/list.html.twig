{% extends 'base.html.twig' %}

{% block title %}Genre list{% endblock %}

{% block body %}
<div class="d-flex justify-content-between">
    <h1>
        Genres
    </h1>
    <span>
        <a class="btn btn-success float-right" style="margin:10px 0 10px 10px;" href="{{ path('genre_create') }}">Add a new genre</a>
    </span>
</div>

<table class="table" id="genre-table" style="empty-cells: hide">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for genre in genres %}
    <tr valign="middle">
        <td>
            {{ genre.id }}
        </td>
        <td>
            {{ genre.name }}
        </td>
        <td>
            <a href="{{ path('genre_edit', {id: genre.id}) }} ">Edit</a>
            |
            <a href="{{ path('genre_delete_restore', {id: genre.id}) }}">{% if not genre.deleted %}Delete{% else %}Restore{% endif %}</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function () {
        $('#genre-table').DataTable( {
        });
    });
</script>
{% endblock %}