{% extends 'base.html.twig' %}

{% block title %}Deals{% endblock %}

{% block body %}
    <div class="container">
        <h1>Deals for {{ game.name }}</h1>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    {% for deal in deals %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h4 class="card-title">
                                    {{ deal.external }}
                                </h4>
                                <a href="https://www.cheapshark.com/redirect?dealID={{ deal.cheapestDealID }} ">Visit store (external link)</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
