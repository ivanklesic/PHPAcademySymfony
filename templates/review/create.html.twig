{% extends 'base.html.twig' %}

{% block title %}{% if not edit %}Add a review {% else %} Edit review {% endif %}{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <h3 class="h3 mb-3 font-weight-normal">{% if not edit %}Add a review {% else %} Edit review {% endif %}for {{ game.name }}</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.reviewText) }}
            {{ form_row(form.rating) }}
            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

